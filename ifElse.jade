doctype html
html
  head
    meta(charset="utf-8")
    title if else presentation
  
  body
    // mixin
    mixin lesson
      p immoc jade study
    +lesson

    mixin study(name, courses)
      p #{name}
      ul.courses
        each course in courses
          li= course
    
    - var name = 'jade'
    - var courses = ['循环','标签']
    +study(name, courses)

    // 嵌套mixin
    mixin group(student)
     p #{student.name}
     +study(student.name, student.courses)
 
    +group({ name: 'xu bin', courses: ['jade', 'nodejs']})

    // 内联嵌套
    mixin team(slogan)
      h4= slogan
      if block
        block
      else
        p no team

    +team('I\'m slogan!')
      p I'm a block there!
    
    //嵌套 使用attributes
    mixin useAttr(name)
      p(calss!= attributes.class)= name
    +useAttr('useAttr')(class='attrClass1')

    mixin useAttrs(name)
      p&attributes(attributes)= name
    +useAttrs('useAttrs')(class='attrClass1') 

    //嵌套 参数
    mixin magic(name, ...args)
      ul(class='#{name}')
        each arg in args
          li(id!=attributes.id) current argument is : #{arg}
    +magic('unsure args presentation','arg1','arg2','arg3')

    // 流程
    h3 if Else
    - var isImooc = true
    - var courses = ['jade', 'node']
    if courses
     if courses.length > 2
       p more than 2: #{courses.join(', ')}
     else if courses.length > 1
       p #{courses.join(', ')}
     else 
       p no course
    else
       p no course

    h3 unless
    unless !isImooc
     p #{courses.length}
    
    h3 case
    - var name = 'jade'
    case name
      when 'java'
      when 'node'
        p Hi Jade!
      when 'jade': p Hi jade!
      default 
        p Hi #{name}
        

   
 